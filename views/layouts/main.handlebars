<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Recipe Creator</title>

    <!-- CSS -->
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/style.css">

    <!-- Bootstrap style -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.4.0/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <header>
        <div class="header">
            <div class="title">
                <h1>The Recipe Box</h1>
            </div>
            <div class="navbar col-md-2 col-lg-6 input-group justify-content-center">
                <!-- other buttons -->
                <div class="input-group-append">
                    <a href="/newRecipe">
                        <button class="btn btn-secondary rounded-pill px-3" type="button">Create New</button>
                    </a>
                    {{#unless logged_in}}
                    <a href="/signUp">
                        <button class="btn btn-danger rounded-pill px-3" type="button">Sign Up</button>
                    </a>
                    {{/unless}}
                    {{#if logged_in}}
                    <button class="btn btn-info rounded-pill px-3" id="logout" type="button">Log Out</button>
                    <button class="btn btn-warning rounded-pill px-3" id="profile" type="button">View Recipes</button>
                    {{/if}}
                </div>
                <!-- search - size of search bar controlled above by col-md-4 -->
                <div class="input-group">
                    <div class="input-group-prepend">
                        <button class="btn btn-primary" type="button">Search</button>
                    </div>
                    <input type="text" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1">
                </div>
            </div>
        </div>
    </header>
    
    {{{body}}}
    
    <!-- Render script for logged in users only -->
    {{#if logged_in}}
    <script src="/js/logout.js"></script>
    {{/if}}

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

