                        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" id="fraction">
                            fraction
                          </button>
                          <ul class="dropdown-menu">
                            <li><a class="1/8" href="#">1/8</a></li>
