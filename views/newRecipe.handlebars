
<section class="margins">
    <div class="row">
        <div class="col-md-4 p-2">
            <!-- title and ingredients area -->
            <div class="box card-body bg-primary rounded shadow box1">
                <div class = "card-body bg-secondary rounded shadow">
                     <!-- title input-->
                    <input type="text" class="form-control" placeholder="title" id="title">
                </div>
                    <div class = "card-body bg-secondary rounded shadow">
                    <div>  
                         <!-- qty row -->
                        <input type="text" class="form-control" placeholder="quantity" id="quantity">
                        <!-- fraction/unit row -->
                        <div class = "row">
                            <div class="dropdown">
                                 <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" id="fraction">
                                    fraction
                                 </button>
                                 <ul class="dropdown-menu" aria-labelledby="fraction">
                                     <li><a class="dropdown-item" href="#">1/8</a></li>
                                     <li><a class="dropdown-item" href="#">1/4</a></li>
                                     <li><a class="dropdown-item" href="#">1/4</a></li>
                                     <li><a class="dropdown-item" href="#">1/2</a></li>
                                     <li><a class="dropdown-item" href="#">2/3</a></li>
                                 </ul>
                            </div>
                            <div class="dropdown">
                                 <button class="btn btn-primary dropdown-toggle"  type="button" data-bs-toggle="dropdown" aria-expanded="false" id="unit">
                                        Unit
                                 </button>
                                 <ul class="dropdown-menu" aria-labelledby="unit">
                                     <li><a class="dropdown-item" href="#">N/A</a></li>
                                     <li><a class="dropdown-item" href="#">tbsp</a></li>
                                     <li><a class="dropdown-item" href="#">tsp</a></li>
                                     <li><a class="dropdown-item" href="#">c</a></li>
                                     <li><a class="dropdown-item" href="#">oz</a></li>
                                     <li><a class="dropdown-item" href="#">lb</a></li>
                                     <li><a class="dropdown-item" href="#">g</a></li>
                                     <li><a class="dropdown-item" href="#">kg</a></li>
                                     <li><a class="dropdown-item" href="#">ml</a></li>
                                     <li><a class="dropdown-item" href="#">L</a></li>
                                 </ul>
                            </div>
                        </div>
                            <!-- ingredient area -->
                        <input type="text" class="form-control" placeholder="Ingredient" id="ingredient">
                        <button type="button" id="ingbutton" class="btn btn-dark">Add</button>

                    </div>
                </div>
            </div>
            <!-- ingredient display area -->
            <div class="box p-2 card-body bg-primary rounded shadow box1">
                <div class = 'card-body bg-white'>
                    <ul id="ingdisplay">
                        <li>Ingredients go here on submit</li>
                    </ul>
                </div>
            </div>

        </div>
        <div class="col-md-8 p-2">
             <!-- instructions area -->
            <div class="box card-body bg-primary rounded shadow box2 ">
                <div class = "">
                    <textarea id="instructions" class="form-control" placeholder="Add Instructions Here" id="floatingTextarea" style="height: 70vh"></textarea>
                </div>
            </div>
            
        </div>
    </div>
    <!-- submit btn -->
 <button type="button" id="submitbtn" class="btn-lg  btn-dark">Submit</button>
 
 </section>
 
